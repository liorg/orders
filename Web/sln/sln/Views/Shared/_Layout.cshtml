        }

        function changeViewType(viewType) {
            $('#viewType').val(viewType);
            var viewAll = $('#viewAll').val();
            var currentPage = 1;// $('#currentPage').val() == null ? 1 : $('#currentPage').val();
            changeView(viewType, viewAll, currentPage);
            // window.location.replace=
        }

        function nextPage(t) {
            if ($('#currentPage').val() == null)
                return;

            var currentPage = $('#currentPage').val();
            page = parseInt(currentPage) + 1;
            switch (t) {
                case "Users":
                    usersView(page);
                    break;
                case "Follows":
                    followView(page);
                    break;
                case "Views":
                    viewer(null, null, page, null, null);
                    break;
                default:
                    changePage(page);
            }

        }

        function prevPage(t) {
            if ($('#currentPage').val() == null)
                return;

            var currentPage = $('#currentPage').val();
            page = parseInt(currentPage) - 1;
            switch (t) {
                case "Users":
                    usersView(page);
                    break;
                case "Follows":
                    followView(page);
                    break;
                case "Views":
                    viewer(null, null, page, null, null);
                    break;

                default:
                    changePage(page);
            }
        }

        function changePage(page) {
            var viewAll = $('#viewAll').val();
            var viewType = $('#viewType').val();

            var nextDay = $('#nextDay').val();
            var prevDay = $('#prevDay').val();

            changeView(viewType, viewAll, page, prevDay, nextDay);

        }
        function usersView(page, prevDay, nextDay) {
            if (page == null)
                page = $('#currentPage').val();

            var viewUrl = "/Account?&currentPage=" + page;
            changeUrl(viewUrl);
        }

        function clickToOrder(url) {
            changeUrl(url);
        }

        function followView(page, prevDay, nextDay) {
            if (page == null)
                page = $('#currentPage').val();

            if (prevDay == null)
                prevDay = $('#prevDay').val();

            if (nextDay == null)
                nextDay = $('#nextDay').val();

            var viewUrl = "/f?&currentPage=" + page;
            if (prevDay != null)
                viewUrl = viewUrl + "&prevDay=" + prevDay;
            if (nextDay != null)
                viewUrl = viewUrl + "&nextDay=" + nextDay;

            changeUrl(viewUrl);
        }

        function viewer(viewType, viewAll, page, prevDay, nextDay) {

            if (viewAll == null)
                viewAll = $('#viewAll').val();

            if (viewType == null)
                viewType = $('#viewType').val();

            if (page == null)
                page = $('#currentPage').val();

            if (prevDay == null)
                prevDay = $('#prevDay').val();

            if (nextDay == null)
                nextDay = $('#nextDay').val();


            var viewUrl = "/s?viewType=" + viewType + "&viewAll=" + viewAll + "&currentPage=" + page;
            if (prevDay != null)
                viewUrl = viewUrl + "&prevDay=" + prevDay;
            if (nextDay != null)
                viewUrl = viewUrl + "&nextDay=" + nextDay;

            changeUrl(viewUrl);
        }

        function changeView(viewType, viewAll, page, prevDay, nextDay) {
            var viewUrl = "/s?viewType=" + viewType + "&viewAll=" + viewAll + "&currentPage=" + page;
            if (prevDay != null)
                viewUrl = viewUrl + "&prevDay=" + prevDay;
            if (nextDay != null)
                viewUrl = viewUrl + "&nextDay=" + nextDay;

            changeUrl(viewUrl);
        }

        function changeUrl(changeUrl) {
            $.blockUI({
                message: "נא המתן מעבד את הבקשה...",
                css: {
                    border: 'none',
                    padding: '15px',
                    backgroundColor: '#000',
                    '-webkit-border-radius': '10px',
                    '-moz-border-radius': '10px',
                    opacity: .5,
                    color: '#fff'
                }
            });
            setTimeout(function () {
                window.location.href = changeUrl;
            }
            , 600);
        }

    </script>
    @Html.Partial("_questionIsArrived")
</body>
</html>
