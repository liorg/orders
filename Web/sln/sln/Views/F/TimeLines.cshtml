@model IEnumerable<TimeLinedDetailVm>

@{
    ViewBag.Title = "תיאור קו הזמן";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h4>תיאור קו הזמן</h4>


<div class="row">
    <div class="col-md-7">

        <table class="table table-striped table-hover">
            <tr>
                <th>מזהה
                </th>
                <th>הסבר
                </th>
                <th class="text-center">קצב התקדמות</th>

            </tr>
            @if (!Model.Any())
            {
                <tr>
                    <td colspan="4">
                        <h4 class="text-center">...</h4>
                    </td>
                </tr>
            }
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.TimeLineIcon(item.Status)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Desc)
                    </td>


                    <td>
                        @Html.Cyrcle(item.StatusPresent, "small")
                    </td>



                </tr>
            }

        </table>

    </div>

</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    @Styles.Render("~/Content/jqueryui")
    @Scripts.Render("~/bundles/jqueryui")
    <script src="~/Scripts/rantoolbx.js?v=1"></script>
}
