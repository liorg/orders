@model sln.Models.ShippingVm

@{
    ViewBag.Title = "משלוח קיים";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>@ViewBag.Title</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
 <div class="stepwizard">
     <div class="stepwizard-row setup-panel">
         <div class="stepwizard-step">
             <a href="#step-1" type="button" class="btn btn-primary btn-circle">1</a>
             <p>ערוך הזמנה</p>
         </div>
         <div class="stepwizard-step">
             <a href="#step-2" type="button" class="btn btn-default btn-circle" disabled="disabled">2</a>
             <p>הוסף פריטי משלוח</p>
         </div>
         <div class="stepwizard-step">
             <a href="#step-3" type="button" class="btn btn-default btn-circle" disabled="disabled">3</a>
             <p>אשר הזמנה</p>
         </div>
         @*<div class="stepwizard-step">
             <a href="#step-4" type="button" class="btn btn-default btn-circle" disabled="disabled">4</a>
             <p>קבלת הזמנה </p>
         </div>
         *@
     </div>
 </div>

<div class="form-horizontal">
    <h4>פרטים</h4>

    @Html.ValidationSummary()

    @Html.HiddenFor(m => m.Number)
    @Html.HiddenFor(m => m.FastSearch)
    @Html.HiddenFor(m => m.Id)
    @Html.HiddenFor(m => m.StatusId)

    <div class="form-group">
        @Html.LabelFor(model => model.Number, new { @class = "control-label col-md-2" })
            <div class="col-md-6">
                @Html.DisplayFor(model => model.Number)
            </div>

    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Status, new { @class = "control-label col-md-2" })
            <div class="col-md-6">
                @Html.DisplayFor(model => model.Status)
            </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.DistanceId, new { @class = "col-md-2 control-label" })
          <div class="col-md-6">
              @Html.DropDownListFor(m => m.DistanceId ,(SelectList)ViewBag.Distance);
          </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.NumFrom, new { @class = "col-md-2 control-label" })
          <div class="col-md-6">
              @Html.TextBoxFor(m => m.NumFrom, new { @class = "form-control" })
          </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.SreetFrom, new { @class = "col-md-2 control-label" })
          <div class="col-md-6">
              @Html.TextBoxFor(m => m.SreetFrom, new { @class = "form-control" })
          </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.CityForm, new { @class = "col-md-2 control-label" })
          <div class="col-md-6">
              @Html.DropDownListFor(m => m.CityForm ,(SelectList)ViewBag.City);
          </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.NumTo, new { @class = "col-md-2 control-label" })
          <div class="col-md-6">
              @Html.TextBoxFor(m => m.NumTo, new { @class = "form-control" })
          </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.SreetTo, new { @class = "col-md-2 control-label" })
          <div class="col-md-6">
              @Html.TextBoxFor(m => m.SreetTo, new { @class = "form-control" })
          </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.CityTo, new { @class = "col-md-2 control-label" })
          <div class="col-md-6">
              @Html.DropDownListFor(m => m.CityTo ,(SelectList)ViewBag.City);
          </div>
    </div>

    <div class="form-group">
        @if(Request.IsAuthenticated && User.IsInRole("Admin"))
        {   
         @Html.LabelFor(m => m.OrgId, new { @class = "col-md-2 control-label" })
          <div class="col-md-10">
              @Html.DropDownListFor(m => m.OrgId ,(SelectList)ViewBag.Orgs);
          </div>
        }
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-8">
            <input type="submit" class="btn btn-primary btn-lg" value="ערוך משלוח" />
            <span class="pull-left"> 
                <a alt="הבא" class="btn btn-success btn-lg" href="@Url.Action("Index","ShipItem",new { id=@Html.DisplayFor(m => m.Id) })"><i class="fa fa-motorcycle pull-right"></i> הבא <i class="fa fa-angle-double-left pull-left"></i></a>
            </span>
        </div>
    </div>
</div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
