@model sln.Models.OrderView

@{
    ViewBag.Title = "בדיקה קיים";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>אישור משלוח @ViewBag.OrderNumber  </h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
 <div class="stepwizard">
     <div class="stepwizard-row setup-panel">
         <div class="stepwizard-step">
             <a href="#" type="button" class="btn btn-default btn-circle">1</a>
             <p>ערוך הזמנה</p>
         </div>
         <div class="stepwizard-step">
            <a href="#" type="button" class="btn btn-default btn-circle">2</a>
             <p>הוסף פריטי משלוח</p>
         </div>
         <div class="stepwizard-step">
             <a href="#step-3" type="button" class="btn btn-primary btn-circle" disabled="disabled">3</a>
             <p>אשר הזמנה</p>
         </div>
        
     </div>
 </div>
                    @Html.Partial("_TimeLinePartial")
<div class="form-horizontal">
   

    <div class="form-group">
        <div class=" col-md-12">
            <span class="pull-left"> 
                <a alt="הבא" class="btn btn-primary btn-lg" href="#"><i class="fa fa-motorcycle pull-right"></i> אישור משלוח</a>
            </span>
<span class="pull-right"> 
                <a alt="קודם" class="btn btn-success btn-lg" href="#"> אחורה <i class="fa fa-angle-double-right pull-right"></i></a>
            </span>
        </div>
    </div>
    
</div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
