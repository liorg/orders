@model OrgVm

@{
    ViewBag.Title = " פרטי ארגון ";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section ordernumber {
 @Html.Partial("_orgToolbar", Model)
}
<div class="row">
    <div class="col-md-10">
        <h4><b class="centered">@Model.Name</b> </h4>
    </div>
</div>

<div class="row">
    <div class="col-md-12">

        <ul class="list-group">
            <li class="list-group-item">
                <span class="label label-primary">@Model.Name</span>
                <span class="prefix  pull-right">שם ארגון :</span>
            </li>
             <li class="list-group-item">
                <span class="label label-primary">@Model.Desc</span>
                <span class="prefix  pull-right">תיאור :</span>
            </li>
            
              <li class="list-group-item">
                <span class="label label-primary">@Html.DisplayFor(m=>m.Address)</span>
                <span class="prefix  pull-right">כתובת :</span>
            </li>
            <li class="list-group-item">
                <span class="label label-primary">@Model.PriceException</span>
                <span class="prefix  pull-right">סכום מחייב חריגה בש"ח :</span>
            </li>
            </ul>
    </div>
</div>
