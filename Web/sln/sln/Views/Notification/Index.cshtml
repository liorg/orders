@model IEnumerable<Michal.Project.Models.NotifyItem>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3> שרות הודעות  </h3>
<div class="row">
 <div class="stepwizard">
     <div class="stepwizard-row setup-panel">
          <div class="stepwizard-step">
             <a href="@Url.Action("Edit","S",new { id=@ViewBag.ShipId })" type="button" class="btn btn-default btn-circle">1</a>
             <p>ערוך הזמנה</p>
         </div>
         <div class="stepwizard-step">
            <a href="#" type="button" class="btn btn-primary btn-circle">2</a>
             <p>הוסף פריטי משלוח</p>
         </div>
         <div class="stepwizard-step">
             <a href="#step-3" type="button" class="btn btn-default btn-circle" disabled="disabled">3</a>
             <p>אשר הזמנה</p>
         </div>
     </div>
 </div>
</div>

@if(ViewBag.Message!="")
{
<div class="row">

<div class="alert alert-warning">
 <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
  @ViewBag.Message
</div>
  </div>
}

<div class="row">
<div class="col-md-7">

<table class="table table-striped table-hover">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Body)
        </th>
      <th></th><th></th>
    </tr>
@if( !Model.Any() )
{
 <tr>
        <td colspan="4" ><h4 class="text-center">אן הודעות חדשות</h4> </td>
</tr>
}
@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Title)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Body)
        </td>
        
    </tr>
}

</table>
  
</div>

</div>
