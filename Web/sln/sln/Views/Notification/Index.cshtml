@model IEnumerable<NotifyItem>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3> שרות הודעות  </h3>


<div class="row">
    <div class="col-md-12">
        <a class="btn btn-primary" role="button" href="https://imaot.co.il/t/register.html?u=@(ViewBag.UserId==null?Guid.Empty:ViewBag.UserId)">קישור לרישום הודעות</a>
    </div>

</div>
<div class="row">
<div class="col-md-7">

<table class="table table-striped table-hover">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Body)
        </th>
      <th></th><th></th>
    </tr>
@if( !Model.Any() )
{
 <tr>
        <td colspan="4" ><h4 class="text-center">אן הודעות חדשות</h4> </td>
</tr>
}
@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Title)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Body)
        </td>
        
    </tr>
}

</table>
  
</div>

</div>

</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    @Styles.Render("~/Content/jqueryui")
    @Scripts.Render("~/bundles/jqueryui")
   <script src="~/Scripts/rantoolbx.js?v=1"></script>
}
