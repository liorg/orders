@model Michal.Project.Models.CompanyVm

@{
    ViewBag.Title = " חברת המשלוחים";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section ordernumber {
 @Html.Partial("_companyToolbar", Model)
}
<div class="row">
    <div class="col-md-10">
        <h4><b class="centered">@Model.Name</b> </h4>
    </div>
</div>

<div class="row">
    <div class="col-md-12">

        <ul class="list-group">
            <li class="list-group-item">
                <span class="label label-primary">@Model.Name</span>
                <span class="prefix  pull-right">שם חברה :</span>
            </li>
             <li class="list-group-item">
                <span class="label label-primary">@Model.Desc</span>
                <span class="prefix  pull-right">תיאור :</span>
            </li>
             <li class="list-group-item">
                <span class="label label-primary">@Model.ContactFullName</span>
                <span class="prefix  pull-right">איש קשר :</span>
            </li>
              <li class="list-group-item">
                <span class="label label-primary">@Model.ContractTel</span>
                <span class="prefix  pull-right">טלפון איש קשר :</span>
            </li>
              <li class="list-group-item">
                <span class="label label-primary">@Model.Address</span>
                <span class="prefix  pull-right">כתובת :</span>
            </li>
            </ul>
    </div>
</div>
