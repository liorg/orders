@model Michal.Project.Models.BussinessClosureView

@{
    ViewBag.Title = "לוח חופשות ";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section ordernumber {
 <li class="dropdown">
                      <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false"><i class="fa fa-bars "></i>@Model.Name  <span class="caret"></span></a>
                            <ul class="dropdown-menu">
                                <li><a href="@Url.Action("Details", "Company", new { companyid=@Model.Id})"><i class="fa fa-motorcycle"></i> פרטים </a></li>
                                <li class="divider"></li>
                                <li><a href="@Url.Action("Sla", "Company", new { companyid=@Model.Id})"><i class="fa fa-rocket"></i> זמני תגובה  </a></li>
                                <li class="divider"></li>
                                <li><a href="@Url.Action("bussinessClosure", "Company", new { companyid=@Model.Id})"><i class="fa fa-clock-o"></i> מועדי פתיחת העסק </a></li>
                                <li class="divider"></li>
                                <li><a href="@Url.Action("DaysOff", "Company", new { companyid=@Model.Id})"><i class="fa fa-rocket"></i> לוח חופשות  </a></li>
                                <li class="divider"></li>
                                
                            </ul>
                        </li>
}
<div class="row">
    <div class="col-md-10">
        <h4><b class="centered"> @Model.Name לוח חופשות של</b> </h4>
    </div> 
</div>

<div class="row">
    <div class="col-md-12">
        <div style="overflow-x: scroll; padding: 1px">
            <table class=" table table-striped table-hover">
                <tr>
                    <th>@Html.DisplayColumnNameFor(Model.Items, model => model.Name)</th>

                    <th>@Html.DisplayColumnNameFor(Model.Items, model => model.Start)</th>
                    <th>@Html.DisplayColumnNameFor(Model.Items, model => model.End)</th>
                    <th>@Html.DisplayColumnNameFor(Model.Items, model => model.DateSpiceial)</th>
                      <th>@Html.DisplayColumnNameFor(Model.Items, model => model.IsDateOff)</th>
                </tr>
                @if (!Model.Items.Any())
                {
                    <tr>
                        <td colspan="6">
                            <h4 class="text-center">אין רשומות בטבלה זאת</h4>
                        </td>
                    </tr>
                }
                @foreach (var item in Model.Items)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.Name) </td>
                        @if(item.IsDateOff==true){
                            <td colspan="2">יום חופש</td>
                        }
                        else{
                        <td>@Html.DisplayFor(modelItem => item.Start)</td>
                        <td>@Html.DisplayFor(modelItem => item.End)</td>
                        }
                        <td>@Html.DisplayFor(modelItem => item.DateSpiceial) </td>
                        <td>@Html.DisplayFor(modelItem => item.IsDateOff) </td>
                    </tr>
                }
            </table>
        </div>
    </div>
</div>
