@model Michal.Project.Models.SlaView

@{
    ViewBag.Title = "מעקב הזמנות שלי";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-md-10">
        <h4><b class="centered">@Model.Name</b> </h4>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <div style="overflow-x: scroll; padding: 1px">
            <table class=" table table-striped table-hover">
                <tr>
                    <th>@Html.DisplayColumnNameFor(Model.Items, model => model.Desc)</th>
                    <th>@Html.DisplayColumnNameFor(Model.Items, model => model.Distance)</th>
                    <th>@Html.DisplayColumnNameFor(Model.Items, model => model.ShipType)</th>
                    <th>@Html.DisplayColumnNameFor(Model.Items, model => model.Mins)</th>
                </tr>
                @if (!Model.Items.Any())
                {
                    <tr>
                        <td colspan="6">
                            <h4 class="text-center">אין רשומות בטבלה זאת</h4>
                        </td>
                    </tr>
                }
                @foreach (var item in Model.Items)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.Desc) </td>
                        <td>@Html.DisplayFor(modelItem => item.Distance)</td>
                        <td>@Html.DisplayFor(modelItem => item.ShipType)</td>
                        <td>@Html.DisplayFor(modelItem => item.Mins) </td>
                    </tr>
                }
            </table>
        </div>
    </div>
</div>
@Html.Partial("_pager", Model)