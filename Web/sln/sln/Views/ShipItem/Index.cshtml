@model IEnumerable<sln.Models.ShippingItemVm>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="row">
<div class="stepwizard">
     <div class="stepwizard-row setup-panel">
         <div class="stepwizard-step">
             <a href="#step-1" type="button" class="btn btn-default btn-circle">1</a>
             <p>יצירת הזמנה</p>
         </div>
         <div class="stepwizard-step">
             <a href="#step-2" type="button" class="btn  btn-primary  btn-circle" disabled="disabled">2</a>
             <p>הוסף פריטי משלוח</p>
         </div>
         <div class="stepwizard-step">
             <a href="#step-3" type="button" class="btn btn-default btn-circle" disabled="disabled">3</a>
             <p>אשר הזמנה</p>
         </div>
         @*<div class="stepwizard-step">
             <a href="#step-4" type="button" class="btn btn-default btn-circle" disabled="disabled">4</a>
             <p>קבלת הזמנה </p>
         </div>
         *@
     </div>
 </div>
</div>
<div class="row">
<p>
  @Html.ActionLink(" הוסף פריט", "Create",new {id= ViewBag.ShipId }, new { @class = "btn btn-primary" })
</p>
<table class="table table-striped table-hover">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ProductName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Total)
        </th>
      
    </tr>
@if( !Model.Any() )
{
 <tr>
        <td colspan="4" ><h4 class="text-center">בחר "הוסף"  לבחירת פריט נוסף</h4> </td>
</tr>
}
@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.ProductName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Total)
        </td>
        
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.Id }) 
        </td>
    </tr>
}

</table>
</div>