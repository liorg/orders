@model IEnumerable<sln.Models.ShippingItemVm>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2> פריטי משלוח </h2>
<div class="row">
<div class="stepwizard">
     <div class="stepwizard-row setup-panel">
        <div class="stepwizard-step">
             <a href="@Url.Action("Edit","S",new { id=ViewBag.ShipId })" type="button" class="btn btn-default btn-circle">1</a>
             <p>ערוך הזמנה</p>
         </div>
         <div class="stepwizard-step">
             <a href="#step-2" type="button" class="btn  btn-primary  btn-circle" disabled="disabled">2</a>
             <p>הוסף פריטי משלוח</p>
         </div>
         <div class="stepwizard-step">
             <a href="#step-3" type="button" class="btn btn-default btn-circle" disabled="disabled">3</a>
             <p>אשר הזמנה</p>
         </div>
         @*<div class="stepwizard-step">
             <a href="#step-4" type="button" class="btn btn-default btn-circle" disabled="disabled">4</a>
             <p>קבלת הזמנה </p>
         </div>
         *@
     </div>
 </div>
</div>

<div class="row">
<p>
 <a class="btn btn-success btn-lg" href="@Url.Action("Create",new { id= ViewBag.ShipId  })">
<i class="fa fa-pencil-square-o  pull-right"></i> הוסף פריט</i></a>
</p>
<div class="row">
<div class="col-md-7">

<table class="table table-striped table-hover">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ProductName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Total)
        </th>
      <th></th><th></th>
    </tr>
@if( !Model.Any() )
{
 <tr>
        <td colspan="4" ><h4 class="text-center">בחר "הוסף"  לבחירת פריט נוסף</h4> </td>
</tr>
}
@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.ProductName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Total)
        </td>
        
        <td>
            @Html.ActionLink("ערוך פריט", "Edit", new { id = item.Id },new { @class = "btn btn-default" }) 
        </td>
 <td>
            @Html.ActionLink("הסר פריט", "Remove", new { id = item.Id },new { @class = "btn btn-danger" }) 
        </td>
    </tr>
}

</table>
  
</div>

</div>
<div class="row">
 <div class="form-group">
        <div class=" col-md-12">
            <span class="pull-left"> 
                <a alt="הבא" class="btn btn-success btn-lg" href="@Url.Action("Show","S",new { id=ViewBag.ShipId })"><i class="fa fa-motorcycle pull-right"></i> הבא <i class="fa fa-angle-double-left pull-left"></i></a>
            </span>
<span class="pull-right"> 
                <a alt="קודם" class="btn btn-success btn-lg" href="@Url.Action("Edit","S",new { id=ViewBag.ShipId })"> אחורה <i class="fa fa-angle-double-right pull-right"></i></a>
            </span>
        </div>
    </div>
</div>
</div>