@model sln.Models.EditUserViewModel

@{
    ViewBag.Title = "ערוך משתמש";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@ViewBag.Title</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
     @Html.HiddenFor(model => Model.UserId); 

    <div class="form-horizontal">
        <h4>פרטים</h4>
        <hr />
        @Html.ValidationSummary(true)
       
        <div class="form-group">
            @Html.LabelFor(model => model.UserName, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                   @Html.DisplayFor(model => model.UserName)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.FirstName, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.FirstName)
                @Html.ValidationMessageFor(model => model.FirstName)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.LastName, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.LastName)
                @Html.ValidationMessageFor(model => model.LastName)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Email, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Email)
                @Html.ValidationMessageFor(model => model.Email)
            </div>
        </div>
 <div class="form-group">
            <div class="col-md-2 control-label">@Html.LabelFor(m => m.IsActive )</div>
 <div class="col-md-4">
                @Html.CheckBoxFor(m => m.IsActive, new { @class = "switch",data_toggle="toggle",data_off = "לא פעיל",data_on="פעיל" })
                            
            </div>
</div>
        <div class="form-group">
            <div class="col-md-2 control-label"></div>
            <div class="col-md-2">
                @Html.CheckBoxFor(m => m.IsOrgMangager)
                            @Html.LabelFor(m => m.IsOrgMangager)
            </div>
            @if (ViewContext.HttpContext.User.IsInRole("Admin"))
{
     <div class="col-md-2">
         @Html.CheckBoxFor(m => m.IsRunner)
                            @Html.LabelFor(m => m.IsRunner)
     </div>
            }
  
    <div class="col-md-2">
        @Html.CheckBoxFor(m => m.IsCreateOrder)
                            @Html.LabelFor(m => m.IsCreateOrder)
    </div>
            <div class="col-md-2">
                @Html.CheckBoxFor(m => m.IsAcceptOrder)
                            @Html.LabelFor(m => m.IsAcceptOrder)
            </div>
        </div>

        <div class="form-group">
            @if(Request.IsAuthenticated && User.IsInRole("Admin"))
           {
           @Html.LabelFor(m => m.OrgId, new { @class = "col-md-2 control-label" })
          <div class="col-md-8">
              @Html.DropDownListFor(m => m.OrgId ,(SelectList)ViewBag.Orgs, new { @class = "form-control"})
          </div>
            }
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="שמור" class="btn btn-default" />
            </div>
        </div>
    </div>
}
<div>
    @Html.ActionLink("חזרה לרשימה", "Index")
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}