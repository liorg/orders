@*@model IEnumerable<Michal.Project.Models.EditUserViewModel>*@
@model Michal.Project.Models.View.UsersView

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<p>
    <a class="btn btn-success btn-lg" href="@Url.Action("Register")">
        <i class="fa fa-user-plus  pull-right"></i>הוסף משתמש חדש</i></a>
</p>
</p>
<div class="row">
    <div class="col-md-12">
        <table class="table table-striped table-hover">
            <tr>

                <th>@Html.DisplayColumnNameFor(Model.Items, model => model.UserName)</th>

                <th>@Html.DisplayColumnNameFor(Model.Items, model => model.FirstName)
                </th>

                <th>@Html.DisplayColumnNameFor(Model.Items, model => model.LastName)
                </th>

                <th>@Html.DisplayColumnNameFor(Model.Items, model => model.Email)
                </th>

                <th>@Html.DisplayColumnNameFor(Model.Items, model => model.IsActive)
                </th>
                <th></th>
            </tr>
            @if (!Model.Items.Any())
            {
                <tr>
                    <td colspan="4">
                        <h4 class="text-center">אין משתמשים </h4>
                    </td>
                </tr>
            }
            @foreach (var item in Model.Items)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.UserName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.FirstName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.LastName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.IsActive)
                    </td>
                    <td>
                        @Html.ActionLink("ערוך", "Edit", new { id = item.UserId })
                    </td>
                </tr>
            }

        </table>
    </div>
    @Html.Partial("_pager", Model)
</div>
