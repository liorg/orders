@model Michal.Project.Models.OrderDetail

<div class="row">
    <div class="col-md-12">
        <table class=" table table-striped table-hover">

            <tr>
                <th>מוצר
                </th>
                <th>סה"כ
                </th>
                <th></th>
                <th></th>
            </tr>
            @if( !Model.ShippingItems.Any() )
                                {
                                 <tr>
                                     <td colspan="2">
                                         <h4 class="text-center">אן פריטים למשלוח</h4>
                                     </td>
                                 </tr>
            }
                                @foreach (var item in Model.ShippingItems) {
                                    <tr>
                                        <td>@Html.DisplayFor(modelItem => item.ProductName)
                                        </td>
                                        <td>@Html.DisplayFor(modelItem => item.Total)
                                        </td>

                                    </tr>
            }
        </table>
    </div>
</div>
