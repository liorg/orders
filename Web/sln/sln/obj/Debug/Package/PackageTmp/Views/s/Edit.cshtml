@model ShippingVm

@{
    ViewBag.Title = "משלוח קיים";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@Html.Partial("_viewLists")
<h3>מספר משלוח @ViewBag.OrderNumber  </h3>


@using (Html.BeginForm("Edit", "S", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    
    <div class="stepwizard">
        <div class="stepwizard-row setup-panel">
            <div class="stepwizard-step">
                <a href="#step-1" type="button" class="btn btn-primary btn-circle">1</a>
                <p>ערוך הזמנה</p>
            </div>
            <div class="stepwizard-step">
                <a href="@Url.Action("Index", "ShipItem", new { id = @Html.DisplayFor(model => model.Id), order = @ViewBag.OrderNumber })" type="button" class="btn btn-default btn-circle">2</a>
                <p>הוסף פריטי משלוח</p>
            </div>
            <div class="stepwizard-step">
                <a href="#step-3" type="button" class="btn btn-default btn-circle" disabled="disabled">3</a>
                <p>אשר הזמנה</p>
            </div>
            @*<div class="stepwizard-step">
             <a href="#step-4" type="button" class="btn btn-default btn-circle" disabled="disabled">4</a>
             <p>קבלת הזמנה </p>
         </div>
         *@
        </div>
    </div>
    
    @Html.HiddenFor(m => m.Number)
    @Html.HiddenFor(m => m.FastSearch)
    @Html.HiddenFor(m => m.Id)
    @Html.HiddenFor(m => m.StatusId)
  
    <div class="panel panel-default">
        <div class="panel-heading">
            <h3 class="panel-title">ניהול</h3>
        </div>
        <div class="panel-body">
            @if (Request.IsAuthenticated && User.IsInRole("Admin"))
            {
                <div class="form-group">
                    @Html.LabelFor(m => m.OrgId, new { @class = "col-md-2 control-label" })
                    <div class="col-md-6">
                        @Html.DropDownListFor(m => m.OrgId, (SelectList)ViewBag.Orgs, new { @class = "form-control" })
                    </div>
                </div>
            }
        </div>
    </div>
    
    <div class="panel panel-default">
        <div class="panel-heading">
            <h3 class="panel-title">מזהה משלוח</h3>
        </div>
        <div class="panel-body">
            @Html.LabelFor(model => model.Number, new { @class = "col-md-2" })
            <div class="col-md-10">
                @Model.Number
            </div>

        </div>
    </div>

    <div class="panel panel-default">
        <div class="panel-heading">
            <h3 class="panel-title">שדות חישוב מחיר </h3>
        </div>
        <div class="panel-body">

            <div class="form-group">
                @Html.LabelFor(m => m.DistanceId, new { @class = "col-md-2 control-label" })
                <div class="col-md-6">
                    @Html.DropDownListFor(m => m.DistanceId, (SelectList)ViewBag.Distance, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.DistanceId)
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.ShipTypeId, new { @class = "col-md-2 control-label" })
                <div class="col-md-6">
                    @Html.DropDownListFor(m => m.ShipTypeId, (SelectList)ViewBag.ShipTypes, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.ShipTypeId)
                </div>
            </div>


        </div>
    </div>
    
    <div class="panel panel-default">
        <div class="panel-heading">
            <h3 class="panel-title">מקור </h3>
        </div>
        <div class="panel-body">
            <div class="form-group">
                @Html.LabelFor(m => m.SreetFrom, new { @class = "col-md-2 control-label" })
                <div class="col-md-6">
                    @Html.TextBoxFor(m => m.SreetFrom, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.SreetFrom)
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.NumFrom, new { @class = "col-md-2 control-label" })
                <div class="col-md-6">
                    @Html.TextBoxFor(m => m.NumFrom, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.NumFrom)
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.CityForm, new { @class = "col-md-2 control-label" })
                <div class="col-md-6">
                    @Html.DropDownListFor(m => m.CityForm, (SelectList)ViewBag.City, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.CityForm)
                </div>
            </div>

        </div>
    </div>
    
    <div class="panel panel-default">
        <div class="panel-heading">
            <h3 class="panel-title">יעד </h3>
        </div>
        <div class="panel-body">
            <div class="form-group">
                @Html.LabelFor(m => m.NameTarget, new { @class = "col-md-2 control-label" })
                <div class="col-md-6">
                    @Html.TextBoxFor(m => m.NameTarget, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.NameTarget)
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.TelTarget, new { @class = "col-md-2 control-label" })
                <div class="col-md-6">
                    @Html.TextBoxFor(m => m.TelTarget, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.TelTarget)
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Recipient, new { @class = "col-md-2 control-label" })
                <div class="col-md-6">
                    @Html.TextBoxFor(m => m.Recipient, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Recipient)
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.SreetTo, new { @class = "col-md-2 control-label" })
                <div class="col-md-6">
                    @Html.TextBoxFor(m => m.SreetTo, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.SreetTo)
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.NumTo, new { @class = "col-md-2 control-label" })
                <div class="col-md-6">
                    @Html.TextBoxFor(m => m.NumTo, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.NumTo)
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.CityTo, new { @class = "col-md-2 control-label" })
                <div class="col-md-6">
                    @Html.DropDownListFor(m => m.CityTo, (SelectList)ViewBag.City, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.CityTo)
                </div>
            </div>
        </div>
    </div>
            
    <div class="form-group">
        <div class="col-md-offset-2 col-md-8">
            <input type="submit" class="btn btn-primary btn-lg" value="ערוך משלוח" />
            <span class="pull-left">
                <a alt="הבא" class="btn btn-success btn-lg" href="@Url.Action("Index", "ShipItem", new { id = @Html.DisplayFor(m => m.Id), order = @ViewBag.OrderNumber })"><i class="fa fa-motorcycle pull-right"></i>הבא <i class="fa fa-angle-double-left pull-left"></i></a>
            </span>
        </div>
    </div>
    
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    @Styles.Render("~/Content/jqueryui")
    @Scripts.Render("~/bundles/jqueryui")
}
