@model Michal.Project.Models.BussinessClosureView

@{
    ViewBag.Title = "מועדי סגירת העסק ";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section ordernumber {
 @Html.Partial("_companyToolbar", Model)
}

<div class="row">
    <div class="col-md-10">
        <h4><b class="centered"> @Model.Name מועדי סגירת העסק עבור</b> </h4>
    </div> 
</div>

<div class="row">
    <div class="col-md-12">
        <div style="overflow-x: scroll; padding: 1px">
            <table class=" table table-striped table-hover">
                <tr>
                    <th>@Html.DisplayColumnNameFor(Model.Items, model => model.Name)</th>

                    <th>@Html.DisplayColumnNameFor(Model.Items, model => model.Start)</th>
                    <th>@Html.DisplayColumnNameFor(Model.Items, model => model.End)</th>
                    <th>@Html.DisplayColumnNameFor(Model.Items, model => model.DateSpiceial)</th>
                </tr>
                @if (!Model.Items.Any())
                {
                    <tr>
                        <td colspan="6">
                            <h4 class="text-center">אין רשומות בטבלה זאת</h4>
                        </td>
                    </tr>
                }
                @foreach (var item in Model.Items)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.Name) </td>
                        @if(item.IsDateOff==true){
                            <td colspan="2" >יום חופש</td>
                        }
                        else{
                        <td>@Html.DisplayFor(modelItem => item.Start)</td>
                        <td>@Html.DisplayFor(modelItem => item.End)</td>
                        }
                        <td>@Html.DisplayFor(modelItem => item.DateSpiceial) </td>
                       
                    </tr>
                }
            </table>
        </div>
    </div>
</div>
