@model Michal.Project.Models.ViewDataPageBase

<input type="hidden" value="@Model.CurrentPage" id="currentPage" name="currentPage" />

<div class="row">
    <ul class="pager"><li></li>
@if (Model.CurrentPage > 1)
{
        <li><a href="#"  onclick="javascript:prevPage()">הקודם</a></li>
}
@if (Model.MoreRecord == true)
{
      <li><a href="#"  onclick="javascript:nextPage()">הבא</a></li> 
}
        

    </ul>
</div>
<div class="row">

    <div class="text-center">
        <span class="badge">@Model.Total סה''כ רשומות</span>

    </div>
</div>
