@model Michal.Project.Models.DistancesView

@{
    ViewBag.Title = "טבלת מרחקים ";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section ordernumber {
    @Html.Partial("_orgToolbar", Model)
}

<div class="row">
    <div class="col-md-10">
        <h4><b class="centered">טבלת מרחקים</b> </h4>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <div style="overflow-x: scroll; padding: 1px">
            <table class=" table table-striped table-hover">
                <tr>
                    <th>@Html.DisplayColumnNameFor(Model.Items, model => model.Name)</th>

                    <th class="visible-md visible-lg">@Html.DisplayColumnNameFor(Model.Items, model => model.Desc)</th>
                    <th>@Html.DisplayColumnNameFor(Model.Items, model => model.FromDistance)</th>
                    <th>@Html.DisplayColumnNameFor(Model.Items, model => model.ToDistance)</th>
                </tr>
                @if (!Model.Items.Any())
                {
                    <tr>
                        <td colspan="6">
                            <h4 class="text-center">אין רשומות בטבלה זאת</h4>
                        </td>
                    </tr>
                }
                @foreach (var item in Model.Items)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.Name) </td>
                        <td class="visible-md visible-lg">@Html.DisplayFor(modelItem => item.Desc)</td>
                        <td>@Html.DisplayFor(modelItem => item.FromDistance)</td>
                        <td>@Html.DisplayFor(modelItem => item.ToDistance)</td>
                    </tr>
                }
            </table>
        </div>
    </div>
</div>
